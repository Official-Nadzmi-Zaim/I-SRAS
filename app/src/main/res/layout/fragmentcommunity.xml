<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Kena pakai scrollview just in case user phone kecik, so boleh scroll down bila x muat-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Letak view dalam ni -->
        <com.seladanghijau.i_sras.custom.CustomTextView
            app:font="arial.ttf"
            android:text="@string/community"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- bahagian legend -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/legend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:text="@string/legend_vital"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/yes_vital"/>

                <TextView
                    android:text="@string/legend_recommended"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/yes_recommended"/>
            </LinearLayout>
        </LinearLayout>

        <!-- bahagian soalan -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/key_area_1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="bold" />

            <TextView
                android:text="@string/key_area_1_title_1"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:text="@string/key_area_1_title_2"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:text="@string/key_area_1_title_3"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:text="@string/key_area_1_title_4"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:text="@string/key_area_1_title_5"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>

        <!-- bahagian button previous & next -->
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnPreviousC"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnNextC"
                android:text="@string/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>