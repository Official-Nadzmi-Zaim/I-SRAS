<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Kena pakai scrollview just in case user phone kecik, so boleh scroll down bila x muat-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Letak view dalam ni -->
        <com.seladanghijau.i_sras.custom.CustomTextView
            app:font="arial.ttf"
            android:text="@string/enviromental"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- bahagian legend -->
        <include layout="@layout/layout_legend" />

        <!-- soalan -->
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <!-- key area 1 -->
            <TextView
                android:text="@string/environmental_key_area_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/environmental_key_area_1_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:scrollbars="none"
                android:id="@+id/lvKeyArea1_1_1b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- key area 2 -->
            <TextView
                android:text="@string/environmental_key_area_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/environmental_key_area_2_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:scrollbars="none"
                android:id="@+id/lvKeyArea2_1_2b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/environmental_key_area_2_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:scrollbars="none"
                android:id="@+id/lvKeyArea2_2_3b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/environmental_key_area_2_title_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:scrollbars="none"
                android:id="@+id/lvKeyArea2_3_4b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/environmental_key_area_2_title_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:scrollbars="none"
                android:id="@+id/lvKeyArea2_4_5b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/environmental_key_area_2_title_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:scrollbars="none"
                android:id="@+id/lvKeyArea2_5_6b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/environmental_key_area_2_title_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:scrollbars="none"
                android:id="@+id/lvKeyArea2_6_7b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- key area 3 -->
            <TextView
                android:text="@string/environmental_key_area_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/environmental_key_area_3_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:scrollbars="none"
