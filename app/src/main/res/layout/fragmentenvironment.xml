                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:scrollbars="none"
                android:id="@+id/lvKeyArea4_1_10b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/environmental_key_area_4_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
