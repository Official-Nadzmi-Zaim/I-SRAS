                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:scrollbars="none"
                android:id="@+id/lvKeyArea3_2_9b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- key area 4 -->
